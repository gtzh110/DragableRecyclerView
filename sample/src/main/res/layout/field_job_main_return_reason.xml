<?xml version="1.0" encoding="utf-8"?>
<dont_need_copy.BottomDialogInFieldJobMain xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reasons_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="#A0000000"
    android:visibility="invisible">

    <LinearLayout
        android:id="@+id/button_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="设置服务任务状态"
            android:textColor="#8899a6"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#FFB9B9B9" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/action_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="取消"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</dont_need_copy.BottomDialogInFieldJobMain>