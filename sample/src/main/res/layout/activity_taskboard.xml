<?xml version="1.0" encoding="utf-8"?>
<FscBoardView.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.app.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <include
        android:id="@+id/header"
        layout="@layout/new_list_header" />


    <FscBoardView.PagerRecyclerView
        android:background="#F5F8FA"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/rv_lists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:clipToPadding="false"
        android:scrollbars="horizontal"
        app:RecyclerViewPager_singlePageFling="true"
        app:RecyclerViewPager_triggerOffset="0.1" />

    <include layout="@layout/field_job_main_return_reason" />

</FscBoardView.DragLayout>
