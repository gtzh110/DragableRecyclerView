<?xml version="1.0" encoding="utf-8"?>
<drag.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.app.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:clipChildren="false">


    <board.PagerRecyclerView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/rv_lists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:clipToPadding="false"
        android:scrollbars="horizontal"
        app:RecyclerViewPager_singlePageFling="true"
        app:RecyclerViewPager_triggerOffset="0.1" />

</drag.DragLayout>
