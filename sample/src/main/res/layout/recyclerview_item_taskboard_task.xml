<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/stage_background"
    android:padding="15dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_gravity="top"
        android:id="@+id/task_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/task_disable_quick_complete" />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:padding="0dp"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="召开一个紧急会议"
            android:maxLines="4"
            android:textSize="18sp" />

        <ImageView
            android:layout_marginTop="13dp"
            android:id="@+id/iv_clock"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_title"
            android:src="@drawable/task_clock_yellow_icon" />

        <TextView
            android:textColor="#FFAB1B"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_clock"
            android:text="12月12日截止"
            android:textSize="16sp" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_owner_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/account"/>


</LinearLayout>
